<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20.0" styleClass="review-form-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302a1.ReviewFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="studentNameLabel" styleClass="review-form-title" text="Review for [Student Name]" />
        <TextArea fx:id="reviewTextArea" promptText="Enter your review here..." VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="submitButton" mnemonicParsing="false" text="Submit Review" styleClass="primary-button" />
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" styleClass="secondary-button" />
        </HBox>
    </children>
</VBox>
