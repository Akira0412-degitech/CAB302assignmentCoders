<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cab302a1.Planner.PlannerPageController"
            stylesheets="@planner.css"
            prefHeight="1000.0" prefWidth="640.0">

    <top>
        <VBox spacing="12" alignment="CENTER" id="headerVBox">
            <Label text="Planner Page" styleClass="page-title"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" styleClass="main-contents">
            <Label fx:id="monthTitle" styleClass="month-title"/>
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="prevButton" text="Previous"/>
                <Button fx:id="todayButton" text="Today"/>
                <Button fx:id="nextButton" text="Next"/>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <HBox>
                <GridPane fx:id="calendarGrid" hgap="6" vgap="6">
                </GridPane>
            </HBox>
        </VBox>
    </center>


</BorderPane>
