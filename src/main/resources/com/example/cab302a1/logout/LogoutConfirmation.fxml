<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.cab302a1.logout.LogoutConfirmationController"
            styleClass="logout-page"
            prefWidth="400.0" prefHeight="300.0">
    
    
    <center>
        <!-- Central container for buttons -->
        <VBox alignment="CENTER" spacing="24" styleClass="logout-container">
            <padding>
                <Insets top="48" bottom="48" left="48" right="48"/>
            </padding>
            
            <!-- Logo -->
            <ImageView fitHeight="120.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" smooth="true">
                <image>
                    <Image url="@../images/QuizCraft_logo.png" smooth="true" backgroundLoading="false" preserveRatio="true" requestedWidth="600.0" />
                </image>
            </ImageView>
            
            <!-- Logout Button (Primary Action) -->
            <Button fx:id="logoutBtn" 
                    styleClass="logout-button" 
                    mnemonicParsing="false" 
                    text="Logout"
                    onAction="#handleLogoutAction"
                    prefWidth="180.0"
                    prefHeight="50.0">
            </Button>
            
            <!-- Cancel Button (Secondary Action) -->
            <Button fx:id="cancelBtn" 
                    styleClass="cancel-button" 
                    mnemonicParsing="false" 
                    text="Cancel"
                    onAction="#handleCancelAction"
                    prefWidth="180.0"
                    prefHeight="50.0">
            </Button>
        </VBox>
    </center>
</BorderPane>
