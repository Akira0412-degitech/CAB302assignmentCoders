    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Login As:" />
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="teacherLoginBtn" mnemonicParsing="false" text="Teacher" styleClass="primary-button" />
            <Button fx:id="studentLoginBtn" mnemonicParsing="false" text="Student" styleClass="primary-button" />
        </HBox>
    </children>
</VBox>

