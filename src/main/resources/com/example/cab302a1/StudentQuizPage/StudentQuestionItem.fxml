<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cab302a1.ui.Student.StudentQuestionItemController"
      spacing="12" style="-fx-padding: 16; -fx-background-color: #e3f2ff; -fx-background-radius: 10;">
    <!-- 01/02 -->
    <Label fx:id="indexLabel" text="01/02" style="-fx-font-weight: bold;"/>

<!--Question = READ only -->
    <TextField fx:id="questionField" text="Question ..."
               editable="false" focusTraversable="false" mouseTransparent="true"/>

<!-- only   can click answer-->
    <GridPane hgap="16" vgap="16">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>

        <children>
            <ToggleButton fx:id="btnA" text="Answer 1" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <ToggleButton fx:id="btnB" text="Answer 2" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <ToggleButton fx:id="btnC" text="Answer 3" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ToggleButton fx:id="btnD" text="Answer 4" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </children>
    </GridPane>
</VBox>
