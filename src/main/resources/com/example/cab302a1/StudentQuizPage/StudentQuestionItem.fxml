<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cab302a1.ui.view.components.question.StudentQuestionItemController"
      spacing="16" 
      styleClass="student-question-card">
      
    <!-- Question Number Badge -->
    <HBox alignment="CENTER_LEFT">
        <Label fx:id="indexLabel" 
              text="01/02" 
              styleClass="student-question-index"/>
    </HBox>

    <!-- Question Text (Read Only) -->
    <TextField fx:id="questionField" 
              text="Question ..."
              styleClass="student-question-text"
              editable="false" 
              focusTraversable="false" 
              mouseTransparent="true"/>

    <!-- Answer Options Label -->
    <Label text="Select your answer:" 
          style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #475569;"/>

    <!-- Answer Options Grid -->
    <GridPane styleClass="answers-grid">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>

        <children>
            <ToggleButton fx:id="btnA" 
                         text="A. Answer 1" 
                         styleClass="answer-toggle"
                         GridPane.columnIndex="0" 
                         GridPane.rowIndex="0"
                         maxWidth="Infinity"/>
            <ToggleButton fx:id="btnB" 
                         text="B. Answer 2" 
                         styleClass="answer-toggle"
                         GridPane.columnIndex="1" 
                         GridPane.rowIndex="0"
                         maxWidth="Infinity"/>
            <ToggleButton fx:id="btnC" 
                         text="C. Answer 3" 
                         styleClass="answer-toggle"
                         GridPane.columnIndex="0" 
                         GridPane.rowIndex="1"
                         maxWidth="Infinity"/>
            <ToggleButton fx:id="btnD" 
                         text="D. Answer 4" 
                         styleClass="answer-toggle"
                         GridPane.columnIndex="1" 
                         GridPane.rowIndex="1"
                         maxWidth="Infinity"/>
        </children>
    </GridPane>
</VBox>
