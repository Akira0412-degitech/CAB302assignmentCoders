<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cab302a1.ui.Student.StudentTakeQuizController"
            prefWidth="900.0" prefHeight="680.0">

    <center>
        <VBox spacing="12" style="-fx-padding: 24;">
            <Label fx:id="titleLabel" text="Quiz Title"
                   style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            <Separator/>
            <Label fx:id="descriptionLabel" text="Description..." wrapText="true"/>

            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" prefViewportHeight="520">
                <content>
                    <VBox fx:id="questionsBox" spacing="16"/>
                </content>
            </ScrollPane>

            <HBox alignment="CENTER" style="-fx-padding: 8 0 0 0;">
                <Button fx:id="doneButton" text="Done" prefWidth="160"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
