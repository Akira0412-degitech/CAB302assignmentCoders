<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cab302a1.ui.StudentTakeQuizController"
            prefWidth="920.0" prefHeight="720.0"
            styleClass="student-quiz-root"
            stylesheets="@StudentQuizPage.css">

    <top>
        <!-- Header Section -->
        <VBox styleClass="quiz-take-header" spacing="8">
            <Label fx:id="titleLabel" 
                   text="Quiz Title"
                   styleClass="quiz-take-title"/>
            <HBox styleClass="quiz-divider"/>
            <Label fx:id="descriptionLabel" 
                   text="Description..." 
                   styleClass="quiz-take-description"
                   wrapText="true"/>
            <Label text="ðŸ’¡ Select one answer for each question below" 
                   styleClass="quiz-info-text"/>
        </VBox>
    </top>

    <center>
        <!-- Questions Area -->
        <ScrollPane fitToWidth="true" 
                   hbarPolicy="NEVER" 
                   vbarPolicy="AS_NEEDED"
                   styleClass="student-questions-scroll"
                   style="-fx-padding: 20px 24px;">
            <content>
                <VBox fx:id="questionsBox" 
                     spacing="20"
                     styleClass="student-questions-container"/>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <!-- Submit Button Area -->
        <HBox styleClass="quiz-submit-container">
            <Button fx:id="doneButton" 
                   text="âœ“ Submit Quiz" 
                   styleClass="quiz-submit-btn"/>
        </HBox>
    </bottom>
</BorderPane>
