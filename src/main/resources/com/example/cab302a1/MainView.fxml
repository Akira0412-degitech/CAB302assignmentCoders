<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cab302a1.HomeController"
            prefWidth="1000.0" prefHeight="640.0">
    <top>
        <HBox spacing="16" BorderPane.alignment="CENTER_LEFT"
              style="-fx-padding: 8 12; -fx-background-color: #f4f4f4; -fx-border-color: #e5e5e5; -fx-border-width: 0 0 1 0;">
            <Label text="Quiz App â€” Student Page" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5">
            <items>
                <VBox spacing="8" style="-fx-padding:12;">
                    <Label text="(To Do)" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <ListView fx:id="todoList" prefHeight="500.0"/>
                </VBox>
                <VBox spacing="8" style="-fx-padding:12;">
                    <Label text="(Done)" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
                    <ListView fx:id="doneList" prefHeight="500.0"/>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>
</BorderPane>
