    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="studentNameLabel" styleClass="section-title" />
        <Label fx:id="studentNumberLabel" styleClass="details-label" />
        <VBox fx:id="quizHistoryContainer" spacing="5.0" styleClass="section" />
        <VBox fx:id="bestSubjectsContainer" spacing="5.0" styleClass="section" />
        <VBox fx:id="worstSubjectsContainer" spacing="5.0" styleClass="section" />
        <Button fx:id="closeButton" text="Close" styleClass="secondary-button" />
    </children>
</VBox>
