<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="750.0" prefWidth="1100.0"
      styleClass="main-container"
      stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cab302a1.ui.TeacherReviewController">

    <children>
        <!-- Sidebar -->
        <VBox prefWidth="250.0" styleClass="sidebar">
            <children>
                <Label styleClass="app-name" text="Interactive Quiz">
                    <VBox.margin>
                        <Insets bottom="30.0"/>
                    </VBox.margin>
                </Label>
                <VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="dashboardBtn" maxWidth="Infinity"
                                styleClass="sidebar-button" text="Dashboard"/>
                        <Button fx:id="quizzesBtn" maxWidth="Infinity"
                                styleClass="sidebar-button" text="Quizzes"/>
                        <Button fx:id="reviewStudentsBtn" maxWidth="Infinity"
                                styleClass="sidebar-button" text="Review Students"/>
                    </children>
                </VBox>
                <Button fx:id="exitBtn" maxWidth="Infinity"
                        styleClass="exit-button" text="Exit">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
        </VBox>

        <!-- Main Content -->
        <VBox alignment="TOP_CENTER" styleClass="content-pane" HBox.hgrow="ALWAYS">
            <children>
                <Label styleClass="page-title" text="Review Page">
                    <VBox.margin>
                        <Insets top="20.0" bottom="10.0"/>
                    </VBox.margin>
                </Label>

                <HBox alignment="TOP_CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>

                        <!-- Student List -->
                        <VBox prefWidth="300.0" styleClass="list-container">
                            <children>
                                <Label styleClass="section-title" text="Student List"/>
                                <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                                    <content>
                                        <VBox fx:id="studentListContainer" alignment="TOP_LEFT" styleClass="student-list" spacing="5.0">
                                            <!-- Example entries (will be populated dynamically) -->
                                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 1"/>
                                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 2"/>
                                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 3"/>
                                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 4"/>
                                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 5"/>
                                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 6"/>
                                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 7"/>
                                        </VBox>
                                    </content>
                                    <padding>
                                        <Insets top="10.0"/>
                                    </padding>
                                </ScrollPane>
                            </children>
                            <padding>
                                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                            </padding>
                        </VBox>

                        <!-- Student Details & Quiz Table -->
                        <VBox spacing="10.0" styleClass="details-container" HBox.hgrow="ALWAYS">
                            <children>
                                <!-- Student Info -->
                                <VBox>
                                    <children>
                                        <Label fx:id="studentNameLabel" styleClass="details-title" text="Student Name: Name 5"/>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0"/>
                                    </VBox.margin>
                                </VBox>

                                <!-- Quiz Table -->
                                <TableView fx:id="quizTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="quizNameCol" text="Quiz Name" prefWidth="150"/>
                                        <TableColumn fx:id="scoreCol" text="Score" prefWidth="100"/>
                                        <TableColumn fx:id="resultCol" text="View Result" prefWidth="120"/>
                                    </columns>
                                </TableView>

                                <!-- Bottom Button -->
                                <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
                                    <Button fx:id="assignReviewBtn" styleClass="action-button" text="Assign Review">
                                        <HBox.margin>
                                            <Insets top="20.0"/>
                                        </HBox.margin>
                                    </Button>
                                </HBox>
                            </children>
                            <padding>
                                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                            </padding>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" bottom="20.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
