<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302a1.ui.QuestionItemController"
      spacing="6" styleClass="question-card">
    <HBox spacing="6" alignment="CENTER_LEFT">
        <Label fx:id="indexLabel" text="#01/01"/>
        <TextField fx:id="questionField" promptText="Question text" HBox.hgrow="ALWAYS"/>
        <Button text="X" onAction="#onRemoveSelf"/>
    </HBox>

    <!-- Answers (each row: Radio + TextField) -->
    <VBox spacing="6">
        <HBox spacing="8" alignment="CENTER_LEFT">
            <RadioButton fx:id="rb1"/>
            <TextField fx:id="answer1" promptText="Choice A" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox spacing="8" alignment="CENTER_LEFT">
            <RadioButton fx:id="rb2"/>
            <TextField fx:id="answer2" promptText="Choice B" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox spacing="8" alignment="CENTER_LEFT">
            <RadioButton fx:id="rb3"/>
            <TextField fx:id="answer3" promptText="Choice C" HBox.hgrow="ALWAYS"/>
        </HBox>

        <HBox spacing="8" alignment="CENTER_LEFT">
            <RadioButton fx:id="rb4"/>
            <TextField fx:id="answer4" promptText="Choice D" HBox.hgrow="ALWAYS"/>
        </HBox>

        <Label text="Tip: Select the radio to mark the correct answer." styleClass="tip"/>

        <Label text="Explanation (optional)"/>

        <TextArea fx:id="explanationArea"
                  promptText="Why is this answer correct? (Shown after submission)"
                  prefRowCount="3"/>
    </VBox>
</VBox>
