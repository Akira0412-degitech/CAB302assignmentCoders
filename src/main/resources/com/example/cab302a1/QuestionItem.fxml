<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302a1.ui.QuestionItemController"
      spacing="12" styleClass="question-card">
      
    <!-- Question Header -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="indexLabel" 
              text="#01/01"
              styleClass="question-index-label"/>
        <TextField fx:id="questionField" 
                  promptText="Enter question text here..." 
                  styleClass="question-text-field"
                  HBox.hgrow="ALWAYS"/>
        <Button text="✕" 
               onAction="#onRemoveSelf"
               styleClass="remove-question-btn"/>
    </HBox>

    <!-- Answer Options -->
    <VBox spacing="10" styleClass="answer-option-container">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <RadioButton fx:id="rb1" styleClass="answer-radio"/>
            <TextField fx:id="answer1" 
                      promptText="Choice A" 
                      styleClass="answer-text-field"
                      HBox.hgrow="ALWAYS"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <RadioButton fx:id="rb2" styleClass="answer-radio"/>
            <TextField fx:id="answer2" 
                      promptText="Choice B" 
                      styleClass="answer-text-field"
                      HBox.hgrow="ALWAYS"/>
        </HBox>
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <RadioButton fx:id="rb3" styleClass="answer-radio"/>
            <TextField fx:id="answer3" 
                      promptText="Choice C" 
                      styleClass="answer-text-field"
                      HBox.hgrow="ALWAYS"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <RadioButton fx:id="rb4" styleClass="answer-radio"/>
            <TextField fx:id="answer4" 
                      promptText="Choice D" 
                      styleClass="answer-text-field"
                      HBox.hgrow="ALWAYS"/>
        </HBox>

        <Label text="💡 Tip: Select the radio button to mark the correct answer." 
              styleClass="tip"/>
    </VBox>

    <!-- Explanation Section -->
    <VBox spacing="6">
        <Label text="📝 Explanation (optional)"
              styleClass="explanation-label"/>
        <TextArea fx:id="explanationArea"
                  promptText="Explain why this answer is correct (shown to students after submission)..."
                  prefRowCount="3"
                  styleClass="explanation-area"
                  wrapText="true"/>
    </VBox>
</VBox>
