<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302a1.ui.page.teacher.TeacherQuizDetailController"
      spacing="16" 
      prefWidth="680" 
      prefHeight="600" 
      styleClass="quiz-detail-root"
      stylesheets="@TeacherQuizPage.css">
      
    <!-- Header Section -->
    <VBox styleClass="detail-header" spacing="8">
        <Label text="Quiz Detail" styleClass="detail-page-title"/>
        
        <VBox spacing="4">
            <Label text="QUIZ TITLE" styleClass="detail-section-label"/>
            <Label fx:id="titleLabel" 
                   wrapText="true" 
                   styleClass="detail-title-text"/>
        </VBox>
        
        <VBox spacing="4">
            <Label text="DESCRIPTION" styleClass="detail-section-label"/>
            <Label fx:id="descLabel" 
                   wrapText="true" 
                   styleClass="detail-description-text"/>
        </VBox>
    </VBox>

    <!-- Questions Section -->
    <VBox spacing="8" VBox.vgrow="ALWAYS">
        <Label text="QUESTIONS" styleClass="detail-section-label"/>
        <ScrollPane fitToWidth="true" 
                   VBox.vgrow="ALWAYS"
                   styleClass="detail-scroll-pane"
                   hbarPolicy="NEVER">
            <VBox fx:id="questionsBox" 
                 spacing="12"
                 styleClass="detail-questions-container"/>
        </ScrollPane>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="12" 
         alignment="CENTER_RIGHT"
         styleClass="detail-actions-container">
        <Button text="Edit Quiz" 
               onAction="#onEdit"
               styleClass="edit-quiz-btn"/>
        <Button text="Close" 
               onAction="#onClose"
               styleClass="close-btn"/>
    </HBox>
</VBox>
