<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cab302a1.ui.Teacher.TeacherQuizDetailController"
      spacing="10" prefWidth="560" prefHeight="480" style="-fx-padding: 14;">
    <Label text="Quiz Detail" style="-fx-font-size: 16; -fx-font-weight: bold;"/>


    <Label text="Title"/>
    <Label fx:id="titleLabel" wrapText="true" style="-fx-font-size: 14; -fx-font-weight: bold;"/>

    <Label text="Description"/>
    <Label fx:id="descLabel" wrapText="true"/>

    <Label text="Questions"/>
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="questionsBox" spacing="8"/>
    </ScrollPane>

    <HBox spacing="8" alignment="CENTER_RIGHT">
        <Button text="Edit" onAction="#onEdit"/>
        <Button text="Close" onAction="#onClose"/>
    </HBox>
</VBox>
