<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cab302a1.ui.page.review.result.ResultQuestionItemController"
      spacing="16" 
      styleClass="result-question-item">
    
    <!-- Question Number Badge -->
    <HBox alignment="CENTER_LEFT">
        <Label fx:id="indexLabel" 
              text="01/02" 
              styleClass="question-index"/>
    </HBox>

    <!-- Question Text (Read-only) -->
    <TextField fx:id="questionField" 
              text="Question ..."
              styleClass="question-text"
              editable="false" 
              focusTraversable="false" 
              mouseTransparent="true"/>

    <!-- Answer Results Label -->
    <VBox spacing="4">
        <Label text="Your Answer vs Correct Answer:" 
              style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #475569;"/>
        <Label text="âœ“ = Correct Answer  |  âœ— = Your Wrong Answer" 
              style="-fx-font-size: 11px; -fx-text-fill: #64748B; -fx-font-style: italic;"/>
    </VBox>

    <!-- Answer Options Grid -->
    <GridPane hgap="16" vgap="16">
        <columnConstraints>
            <ColumnConstraints percentWidth="50"/>
            <ColumnConstraints percentWidth="50"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>

        <children>
            <ToggleButton fx:id="btnA" 
                         text="A. Answer 1" 
                         GridPane.columnIndex="0" 
                         GridPane.rowIndex="0" 
                         maxWidth="Infinity" 
                         styleClass="answer-button"/>
            <ToggleButton fx:id="btnB" 
                         text="B. Answer 2" 
                         GridPane.columnIndex="1" 
                         GridPane.rowIndex="0" 
                         maxWidth="Infinity" 
                         styleClass="answer-button"/>
            <ToggleButton fx:id="btnC" 
                         text="C. Answer 3" 
                         GridPane.columnIndex="0" 
                         GridPane.rowIndex="1" 
                         maxWidth="Infinity" 
                         styleClass="answer-button"/>
            <ToggleButton fx:id="btnD" 
                         text="D. Answer 4" 
                         GridPane.columnIndex="1" 
                         GridPane.rowIndex="1" 
                         maxWidth="Infinity" 
                         styleClass="answer-button"/>
        </children>
    </GridPane>
    
    <!-- Explanation Section (Hidden if no explanation) -->
    <VBox fx:id="explanationBox" 
         spacing="6" 
         styleClass="explanation-box" 
         visible="false" 
         managed="false">
        <Label text="ðŸ’¡ Explanation:" styleClass="explanation-title"/>
        <Label fx:id="explanationLabel" 
              text="" 
              wrapText="true" 
              styleClass="explanation-text"/>
    </VBox>
</VBox>

