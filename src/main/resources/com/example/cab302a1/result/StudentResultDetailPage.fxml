<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cab302a1.ui.Student.StudentResultDetailController"
            prefWidth="900.0" prefHeight="680.0" styleClass="result-detail-root">

    <center>
        <VBox spacing="12" styleClass="result-detail-content">
            <Label fx:id="titleLabel" text="Quiz Title"
                   styleClass="quiz-title"/>
            <Separator/>
            <Label fx:id="descriptionLabel" text="Review your answers below" 
                   wrapText="true" styleClass="quiz-description"/>

            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" 
                       prefViewportHeight="520" styleClass="questions-scroll">
                <content>
                    <VBox fx:id="questionsBox" spacing="16" styleClass="questions-container"/>
                </content>
            </ScrollPane>

            <HBox alignment="CENTER" styleClass="button-container">
                <Button fx:id="doneButton" text="Done" prefWidth="160" styleClass="done-button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>

