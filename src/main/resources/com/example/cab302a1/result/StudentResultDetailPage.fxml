    </top>

    <center>
        <!-- Questions Area -->
        <ScrollPane fitToWidth="true" 
                   hbarPolicy="NEVER" 
                   vbarPolicy="AS_NEEDED" 
                   styleClass="questions-scroll"
                   style="-fx-padding: 20px 24px;">
            <content>
                <VBox fx:id="questionsBox" 
                     spacing="20" 
                     styleClass="questions-container"/>
            </content>
        </ScrollPane>
    </center>

