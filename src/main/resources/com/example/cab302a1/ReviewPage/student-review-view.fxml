<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="750.0" prefWidth="1100.0"
      styleClass="main-container"
      stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cab302a1.ui.StudentReviewController">

    <!-- Sidebar -->
    <VBox prefWidth="250.0" styleClass="sidebar">
        <children>
            <Label styleClass="app-name" text="Interactive Quiz">
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>
            <VBox alignment="TOP_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                <children>
                    <Button fx:id="dashboardBtn" maxWidth="Infinity"
                            styleClass="sidebar-button" text="Dashboard" />
                    <Button fx:id="reviewBtn" maxWidth="Infinity"
                            styleClass="sidebar-button" text="Review" />
                    <Button fx:id="timetableBtn" maxWidth="Infinity"
                            styleClass="sidebar-button" text="Timetable" />
                </children>
            </VBox>
            <Button fx:id="exitBtn" maxWidth="Infinity"
                    styleClass="exit-button" text="Exit">
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </Button>
        </children>
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
    </VBox>

    <!-- Main Content -->
    <VBox alignment="TOP_CENTER" styleClass="content-pane" HBox.hgrow="ALWAYS">
        <children>
            <Label styleClass="page-title" text="Review Page">
                <VBox.margin>
                    <Insets top="20.0" bottom="20.0" />
                </VBox.margin>
            </Label>

            <!-- Quiz Results Table -->
            <TableView fx:id="quizTable" styleClass="quiz-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="quizNameCol" text="Quiz Name" prefWidth="250"/>
                    <TableColumn fx:id="scoreCol" text="Score" prefWidth="150"/>
                    <TableColumn fx:id="viewResultCol" text="View Result" prefWidth="200"/>
                    <TableColumn fx:id="feedbackCol" text="Feedback" prefWidth="200"/>
                </columns>
            </TableView>
        </children>
        <padding>
            <Insets left="20" right="20" bottom="20"/>
        </padding>
    </VBox>
</HBox>
