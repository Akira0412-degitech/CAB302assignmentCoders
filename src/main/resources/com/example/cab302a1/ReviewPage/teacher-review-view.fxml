<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cab302a1.ui.Teacher.TeacherReviewController"
            prefWidth="1200" prefHeight="700"
            stylesheets="@../styles.css">

    <!-- Left: Navbar component -->
    <left>
        <fx:include source="../components/Navbar.fxml"/>
    </left>

    <!-- Center: Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #DBEAFE; -fx-padding: 20;">

            <Label styleClass="page-title" text="Review Page"/>

            <HBox alignment="TOP_CENTER" spacing="20" HBox.hgrow="ALWAYS">

                <!-- Student List -->
                <VBox prefWidth="300" spacing="10" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-background-radius: 8;">
                    <Label styleClass="section-title" text="Student List"/>
                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                        <VBox fx:id="studentListContainer" alignment="TOP_LEFT" spacing="5">
                            <!-- Mock student buttons (can be replaced dynamically) -->
                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 1"/>
                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 2"/>
                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 3"/>
                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 4"/>
                            <Button maxWidth="Infinity" styleClass="student-list-item" text="Name 5"/>
                        </VBox>
                    </ScrollPane>
                </VBox>

                <!-- Student Details & Quiz Table -->
                <VBox spacing="10" HBox.hgrow="ALWAYS" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-background-radius: 8;">

                    <Label fx:id="studentNameLabel" styleClass="details-title" text="Student Name: Name 1"/>

                    <TableView fx:id="quizTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="quizNameCol" text="Quiz Name" prefWidth="250"/>
                            <TableColumn fx:id="scoreCol" text="Score" prefWidth="150"/>
                            <TableColumn fx:id="resultCol" text="View Result" prefWidth="120"/>
                        </columns>
                    </TableView>

                    <HBox alignment="BOTTOM_RIGHT">
                        <Button fx:id="assignReviewBtn" styleClass="action-button" text="Assign Review"/>
                    </HBox>

                </VBox>

            </HBox>
        </VBox>
    </center>

</BorderPane>
