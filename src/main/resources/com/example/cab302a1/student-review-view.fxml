<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="750.0" prefWidth="1100.0"
            styleClass="main-pane" stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.cab302a1.ui.StudentReviewController">

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200.0" styleClass="sidebar">
            <children>
                <Label styleClass="app-name" text="Interactive Quiz Creator">
                    <VBox.margin>
                        <Insets top="20.0" bottom="20.0" />
                    </VBox.margin>
                </Label>

                <VBox spacing="15.0">
                    <children>
                        <Button fx:id="dashboardBtn" maxWidth="Infinity" styleClass="sidebar-button" text="Home"/>
                        <Button fx:id="reviewBtn" maxWidth="Infinity" styleClass="sidebar-button" text="Review"/>
                        <Button fx:id="quizzesBtn" maxWidth="Infinity" styleClass="sidebar-button" text="Timetable"/>
                        <Region VBox.vgrow="ALWAYS"/>
                        <Button fx:id="exitBtn" maxWidth="Infinity" styleClass="exit-button" text="EXIT"/>
                    </children>
                    <padding>
                        <Insets left="20" right="20" bottom="20"/>
                    </padding>
                </VBox>
            </children>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="10" alignment="TOP_CENTER" styleClass="content-pane">
            <children>
                <Label styleClass="page-title" text="Interactive Quiz Creator"/>

                <!-- Quiz Results Table -->
                <TableView fx:id="quizTable" prefHeight="600" prefWidth="800" styleClass="quiz-table">
                    <columns>
                        <TableColumn fx:id="quizNameCol" text="Quiz Name" prefWidth="200"/>
                        <TableColumn fx:id="scoreCol" text="Score" prefWidth="150"/>
                        <TableColumn fx:id="viewResultCol" text="View Result" prefWidth="200"/>
                        <TableColumn fx:id="feedbackCol" text="Feedback" prefWidth="200"/>
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
